{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "kubernetes": {
    "fileMatch": [
      "\\.yaml$"
    ]
  },
  "helm-values": {
    "fileMatch": [
      "\\.yaml$"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "\\.yaml$"
      ],
      "matchStrings": [
        "datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s  version: (?<currentValue>.*)\\s",
        "datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\stalosVersion: (?<currentValue>.*)\\s",
        "datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\skubernetesVersion: (?<currentValue>.*)\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "kubernetes/ingress-nginx"
      ],
      "versioning": "regex:^controller-v?(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)?$"
    },
    {
      "matchPackageNames": [
        "koush/scrypted"
      ],
      "versioning": "regex:^18-jammy-full.s6-v?(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)?$"
    },
    {
      "matchFileNames": [
        "kubernetes/clusters/*/talos/*.yaml"
      ],
      "matchPackageNames": [
        "siderolabs/talos",
        "ghcr.io/siderolabs/talosctl",
        "jtcressy-home/talos-boot-assets"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "groupName": "talos",
      "groupSlug": "talos"
    },
    {
      "matchPackageNames": [
        "siderolabs/kubelet"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "groupName": "kubernetes",
      "groupSlug": "kubernetes"
    },
    {
      "matchFileNames": [
        "kubernetes/deploy/home/media/*/clusters/*/*.yaml"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "groupName": "home media apps",
      "groupSlug": "home-media-apps",
      "automerge": true,
      "addLabels": [
        "renovate:automerge"
      ]
    },
    {
      "matchFileNames": [
        ".taskfiles/**"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "groupName": "taskfiles",
      "groupSlug": "taskfiles",
      "automerge": true,
      "ignoreTests": true,
      "addLabels": [
        "renovate:automerge"
      ]
    },
    {
      "matchFileNames": [
        ".devcontainer/**"
      ],
      "groupName": "devcontainer",
      "groupSlug": "devcontainer",
      "automerge": true,
      "ignoreTests": true,
      "addLabels": [
        "renovate:automerge"
      ]
    },
    {
      "matchDatasources": [
        "go"
      ],
      "groupName": "golang modules",
      "groupSlug": "golang-modules",
      "automerge": true,
      "ignoreTests": true,
      "addLabels": [
        "renovate:automerge"
      ]
    },
    {
      "matchFileNames": [
        "kubernetes/deploy/*/*/*/disabled/**"
      ],
      "enabled": false
    }
  ],
  "autoApprove": true
}
